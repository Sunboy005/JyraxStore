
@model JyraxStore.Models.Category

<!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Add A new Category</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form method="POST" asp-action="CreateCategory">
                <div class="card-body">
                  <div class="form-group">
                    <label asp-for="CategoryName"></label>
                    <input asp-for="CategoryName" class="form-control" placeholder="Enter Category Name">
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                  </div>                  
                  <div class="form-group">
                    <label asp-for="CategoryDescription"></label>
                    <textarea asp-for="CategoryDescription"  class="form-control" ></textarea>
                    <span asp-validation-for="CategoryDescription" class="text-danger"></span>
                  </div>
                  <input asp-for="Id" type="hidden"  class="form-control" value="@Guid.NewGuid().ToString()">
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <div class="row text-right">
                        <div class="col-sm-3">
                            <input type="submit"  class="btn btn-success" value="Create">
                        </div>
                        <div class="col-sm-3">
                            <a asp-action="Index" class="btn btn-danger" ><i class="fa fa-back-arrow"></i>Back</a>
                        </div>
                    </div>
                  
                 
                </div>
              </form>
            </div>
            <!-- /.card -->

            <!-- general form elements -->


