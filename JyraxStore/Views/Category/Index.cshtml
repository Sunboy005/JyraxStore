@model IEnumerable<JyraxStore.Models.Category>

    <div class="row col-sm-12">
             <div class=" col-sm-6">
                <h2 class="text-danger">Category List</h2>
              </div>
              <div class=" col-sm-6">
                <a class="btn btn-primary" asp-area="" asp-controller="Category" asp-action="CreateCategory"><i class="fa fa-plus"></i> Create New List</a> 
            </div>
        <br /><br />
        @if (Model.Count() > 0)
        {
            <table class="table-responsive-sm table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Category Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                   @foreach(var item in Model)
                    {
                       <tr>
                           <td width="50%">@item.CategoryName</td> 
                           <td width="50%">@item.CategoryDescription</td> 
                           <td>
                               <a asp-action="EditCategory" class="btn btn-warning">Edit</a>
                           </td>
                           <td>
                               <a asp-action="DeleteCategory" class="btn btn-danger">Delete</a>
                           </td>
                       </tr> 
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No category exist</p>
        }

    </div>

