@model IEnumerable<JyraxStore.Models.Category>

    <div class="row col-sm-12">
        <div class=" col-sm-8">
             <div class=" col-sm-6">
                <h2 class="text-danger">Category List</h2>
              </div>
              <div class=" col-sm-6">
                Create New List
            </div>
        </div>
        <div class=" col-sm-4">
             
        </div>
        
        <br /><br />
        @if (Model.Count() > 0)
        {
            <table class="table-responsive-sm table-bordered table-striped" style="width100%">
                <thead>
                    <tr>
                        <th>Category Name</th>
                    
                        <th>Display Order</th>
                        <th>Category description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                   @foreach(var item in Model)
                    {
                       <tr>
                           <td width="50%">@item.CategoryName</td> 
                           <td width="50%">@item.DisplayOrder</td> 
                           <td width="50%">@item.CategoryDescription</td> 
                           <td></td>
                       </tr> 
                    }
                </tbody>
            </table>
    else
        {
            <p>No category exist</p>
        }

    </div>

